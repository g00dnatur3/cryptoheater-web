{
  "name": "cryptoheater-web",
  "version": "0.0.1",
  "description": "cryptoheater-web",
  "scripts": {
    "lint": "tslint 'src/**/*.ts?(x)'",
    "lint-fix": "tslint --fix 'src/**/*.ts?(x)'",
    "start": "npm run build && concurrently --kill-others \"npm run start-express\"",
    "start-express": "NODE_ENV=production node build/server/express/index.js",
    "build-express": "sudo rm -rf build && node_modules/.bin/tsc && npm run copy-all && webpack --mode production",
    "copy-all": "#npm run copy-ssl && npm run copy-email",
    "copy-ssl": "cp -a src/server/ssl build/server/",
    "copy-email": "cp -a src/server/services/email/*.html build/server/services/email && cp -a src/server/services/email/*.css build/server/services/email",
    "build": "npm run build-express",
    "client": "webpack-dev-server --mode development --devtool inline-source-map --hot --host 0.0.0.0",
    "server": "nodemon build/server/express/index.js",
    "dev": "rm -rf build && node_modules/.bin/tsc && npm run copy-all && concurrently --kill-others \"node_modules/.bin/tsc -w\" \"npm run server\" \"npm run client\"",
    "init-schema": "cd schema && node bin/init-schema.js",
    "dist": "npm run build-express && nexe build/server/express/index.js -r \"public/**/*\""
  },
  "author": "unknown",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.18.1",
    "body-parser": "^1.18.3",
    "bootstrap": "^4.5.0",
    "core-js": "^3.14.0",
    "express": "^4.16.4",
    "js-sha3": "^0.8.0",
    "log4js": "^3.0.6",
    "morgan": "^1.9.1",
    "react-bootstrap": "^1.0.1",
    "react-bootstrap-icons": "^1.1.0",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-router-dom": "5.1.2",
    "reactstrap": "^8.9.0"
  },
  "devDependencies": {
    "@material-ui/core": "^4.10.1",
    "@material-ui/icons": "^4.9.1",
    "@types/express": "^4.16.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.7.5",
    "@types/query-string": "^6.2.0",
    "@types/react": "16.9.25",
    "@types/react-dom": "16.9.3",
    "@types/react-router-dom": "5.1.3",
    "@types/jest": "^24.0.23",
    "concurrently": "^3.6.1",
    "css-loader": "^1.0.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "file-loader": "^2.0.0",
    "jest": "^24.9.0",
    "nodemon": "^1.18.9",
    "react-svg-loader": "^2.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.21.0",
    "supertest": "^4.0.2",
    "tslint": "^5.20.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "ts-loader": "6.2.2",
    "typescript": "3.8.2"
  },
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.0.0"
  }
}
